#include <iostream>
#include <string.h>
#include <stdlib.h>

using namespace std;
struct movies_t {
    char title[50];
    int year;
    } mine, yours;
void printmovie (movies_t movie)
{
    cout <<movie.title;
    cout <<"("<<movie.year<<")\n";
}
int main()
{
    char buffer [50];

    strcpy (mine.title,"Finding Nemo");
    mine.year = 2003;

    cout <<"Masukkan judul film favorit:";
    cin.getline(yours.title,50);
    cout <<"Masukkan tahun:";
    cin.getline(buffer,50);
    yours.year = atoi(buffer);

    cout <<"Judul film favorit yang ada:\n";
    printmovie (mine);
    cout <<"Judul film favorit kamu adalah:\n";
    printmovie (yours);
    return 0;
}

